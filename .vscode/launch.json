{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend"
        },
        {
            "command": "npm start",
            "name": "Build and run",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "${defaultBuildTask}"
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "Start server (Express)",
            "command": "npm run dev",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "npm: install"
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "Start React Client (Vite)",
            "command": "npm run dev",
            "cwd": "${workspaceRoot}/frontend",
            "preLaunchTask": "npm: install - frontend"
        }
    ],
    "compounds": [
        {
            "name": "Start Development Server",
            "configurations": [
                "Start server (Express)",
                "Start React Client (Vite)",
                "Launch Edge"
            ],
            "preLaunchTask": "npm: install - frontend",
            "stopAll": true
        }
    ]
}
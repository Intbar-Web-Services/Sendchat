{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start Server",
            "request": "launch",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "runtimeArgs": [
                "run-script",
                "dev"
            ],
            "cwd": "${workspaceFolder}/backend",
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Start Client",
            "request": "launch",
            "console": "integratedTerminal",
            "runtimeArgs": [
                "run-script",
                "dev"
            ],
            "serverReadyAction": {
                "pattern": "localhost:([0-9]+)",
                "uriFormat": "http://localhost:%s",
                "action": "debugWithEdge"
            },
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Start Desktop",
            "request": "launch",
            "console": "integratedTerminal",
            "runtimeArgs": [
                "run-script",
                "dev"
            ],
            "cwd": "${workspaceFolder}/desktop",
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Build And Run",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "serverReadyAction": {
                "pattern": "localhost:([0-9]+)",
                "uriFormat": "http://localhost:%s",
                "action": "debugWithEdge"
            },
            "runtimeExecutable": "npm",
            "preLaunchTask": "${defaultBuildTask}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
    ],
    "compounds": [
        {
            "name": "Start Development Server",
            "configurations": [
                "Start Server",
                "Start Client",
                "Start Desktop"
            ],
            "stopAll": true
        }
    ]
}